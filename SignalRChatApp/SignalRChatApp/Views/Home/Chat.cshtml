@page

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <h2 class="display-4">Users online</h2>
            <table id="users-online" class="mt-5"></table>
        </div>
        <div class="col-sm-8">
            <h2 class="display-4" style="overflow: auto;">Messages</h2>
            <div class="col-sm-12">
                <div id="type-message">
                    <textarea class="form-control form-control-lg" type="text" id="message-input" placeholder="Type message..." rows="2" col="8"></textarea>
                    <input class="btn btn-info" type="button" id="send-button" value="Send"/>
                </div>
            </div>
            <hr/>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-8">
            <div id="message-box" class="mt-5 pt-3">
                <ul id="messages-list"></ul>
            </div>
        </div>
    </div>

</div>

<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>

